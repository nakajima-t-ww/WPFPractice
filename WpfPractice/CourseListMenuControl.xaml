<UserControl x:Class="WpfPractice.CourseListMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPractice"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="120" AllowDrop="True" Drop="UserControl_Drop">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#FF4A455C "/>
            <GradientStop Color="#FF110229" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <ScrollViewer Margin="8">
            <StackPanel x:Name="CourseListPanel">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
